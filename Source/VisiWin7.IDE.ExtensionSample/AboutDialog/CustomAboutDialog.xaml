<about:AboutDialogUserControlBase x:Class="CustomNamespace.ExtensionSample.AboutDialog.CustomAboutDialog"
                                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                  xmlns:about="clr-namespace:IDE.Extensibility.About;assembly=VisiWin7.IDE.Extensibility"
                                  d:DataContext="{d:DesignInstance Type=about:AboutInfo, IsDesignTimeCreatable=True}"
                                  mc:Ignorable="d"
                                  d:DesignHeight="333" d:DesignWidth="600"
                                  DataContext="{Binding DataContext.AboutInfo, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}">
    <!-- A custom datacontext can be set here. It will overwrite the one provided by VisiWin7. Remove the lines starting with d:DataContext and DataContext above then.
    <about:AboutDialogUserControlBase.DataContext>
        
    </about:AboutDialogUserControlBase.DataContext>-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0,5*" />
            <RowDefinition Height="0,5*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0,5*" />
            <ColumnDefinition Width="0,5*" />
        </Grid.ColumnDefinitions>

        <Image Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="2">
            <Image.Source>
                <BitmapImage UriSource="pack://application:,,,/VisiWin7.IDE.ExtensionSample;component/AboutDialog/About-Dialog.png"
                             Rotation="Rotate180" />
            </Image.Source>
        </Image>

        <Grid Grid.Row="0" Grid.Column="0" Margin="16,16,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Margin="4" Text="Installationsversion:" />
            <TextBlock Grid.Row="0" Grid.Column="1" Margin="4" Text="77" />

            <TextBlock Grid.Row="1" Grid.Column="0" Margin="4" Text="Buildversion:" />
            <TextBlock Grid.Row="1" Grid.Column="1" Margin="4" Text="{Binding BuildVersion}" />

            <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="4" FontWeight="Bold"
                       Text="{Binding Copyright}" />
            <TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Margin="4" FontWeight="Bold"
                       Text="All Rights Reserved placeholder" />

            <TextBlock Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Margin="4">
                <Hyperlink Command="{Binding NavigateToLicenseInfoCommand}">
                    <TextBlock Text="License placeholder" />
                </Hyperlink>
            </TextBlock>

        </Grid>
    </Grid>

</about:AboutDialogUserControlBase>